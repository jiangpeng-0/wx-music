/* pages/detail-mv/index.wxss */
page{
  padding-top: 440rpx;
}
.top-mv{
  position: fixed;
  top: 0;
  width: 100%;
  height: 440rpx;
}
.top-video{
  width: 100%;
  height: 100%;
}
.cover-image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  /* z-index: 999; */
}
.cover-img{
  /* position: absolute; */
}
.cover-play{
  position: absolute;
  z-index: 9999;
  width: 0;
  height: 0;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 20px solid transparent;
  border-left: 30px solid #fff;
  margin-left: 10px;
}
.cover-play-bottom{
  position: absolute;
  z-index: 9999;
  width: 60rpx;
  height: 60rpx;
  bottom: 10rpx;
  left: 30rpx;
}
.cover-play-quanpin{
  position: absolute;
  z-index: 9999;
  width: 60rpx;
  height: 60rpx;
  bottom: 10rpx;
  right: 30rpx;
}
.mv-error{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 40%;
  height: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #cccccc;
  font-weight: 900;
  font-size: 46rpx;
  /* background-color: #cccccc; */
  z-index: 9999;
}